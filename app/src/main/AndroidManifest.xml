<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.baxamoosa.helpwanted">

    <!-- This permission is necessary in order for HelpWanted to perform network access. -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Permissions required by the sync adapter -->
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />

    <!-- Permissions required by Place Picker -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <!-- Permissions required to make our UI more friendly -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Permissions required for Google Cloud Messaging -->
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <permission
        android:name="com.baxamoosa.helpwanted.app.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.baxamoosa.helpwanted.app.permission.C2D_MESSAGE" />

    <application
        android:name=".application.HelpWantedApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!--
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${PLACE_PICKER_API_KEY}"/>
            -->

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/places_api_key" />

        <activity
            android:name=".ui.JobPostingListActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.JobPostingDetailActivity"
            android:label="@string/title_jobposting_detail"
            android:parentActivityName=".ui.JobPostingListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.JobPostingListActivity" />
        </activity>
        <activity
            android:name=".ui.Settings"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".ui.JobPostingListActivity"
            android:theme="@style/SettingsTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.JobPostingListActivity" />
        </activity>
        <activity
            android:name=".ui.MyJobs"
            android:label="@string/title_activity_my_jobs"
            android:parentActivityName=".ui.JobPostingListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.baxamoosa.helpwanted.ui.JobPostingListActivity" />
        </activity>
        <activity
            android:name=".ui.PlacePickerExample"
            android:label="@string/title_activity_place_picker"
            android:parentActivityName=".ui.JobPostingListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.baxamoosa.helpwanted.ui.JobPostingListActivity" />
        </activity>
        <activity
            android:name=".ui.GoogleAccount"
            android:label="@string/title_activity_google_accounts"
            android:parentActivityName=".ui.JobPostingListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.baxamoosa.helpwanted.ui.JobPostingListActivity" />
        </activity>
    </application>

</manifest>